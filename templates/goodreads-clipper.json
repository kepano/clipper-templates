{
	"schemaVersion": "0.1.0",
	"name": "Goodreads",
	"behavior": "create",
	"noteNameFormat": "{{title}}",
	"path": "References",
	"noteContentFormat": "{{selector:.BookPageMetadataSection__description}}",
	"properties": [
        {
            "name": "categories",
            "value": "[[Books]]",
            "type": "multitext"
        },
		{
			"name": "title",
			"value": "{{selector:div.BookPageTitleSection__title|first}}",
			"type": "text"
		},
		{
			"name": "author",
			"value": "{{selector:.ContributorLink__name|first}}",
			"type": "multitext"
		},
		{
			"name": "genre",
			"value": "{{selector:.BookPageMetadataSection__genres .BookPageMetadataSection__genreButton|wikilink}}",
			"type": "multitext"
		},
		{
			"name": "pages",
			"value": "{{selector:p[data-testid='pagesFormat'|split:\\\", \\\"|slice:0|split:\\\" \\\"|slice:0}}",
			"type": "number"
		},
		{
			"name": "year",
			"value": "{{selector:p[data-testid='publicationInfo']|split:\\\"First published \\\"|slice:1|date:\\\"YYYY\\\"}}",
			"type": "number"
		},
		{
			"name": "rating",
			"value": "{{selector:.RatingStatistics__rating|first}}",
			"type": "number"
		},
		{
			"name": "cover",
			"value": "{{selector:.BookCover__image img?src|first}}",
			"type": "text"
		},
		{
			"name": "language",
			"value": "{{selector:.TruncatedContent div|first}}",
			"type": "text"
		},
		{
			"name": "created",
			"value": "{{date}}",
			"type": "date"
		},
		{
			"name": "tags",
			"value": "books, to-read",
			"type": "multitext"
		}
	],
	"triggers": [
		"https://www.goodreads.com/book/"
	]
}
